<article class="mb-10">
    <time class="text-sm mb-4 text-grey-light">
      {{ post.date.toDateString() }}
    </time>
    <h3 class="text-xl md:text-2xl mb-4 2xl:text-2xl | duration-200 hover:text-pink">
        <a href="{{ post.url | url }}">
          {{ post.data.title }}
        </a>
    </h3>
    <p class="mb-6 leading-normal 2xl:text-lg">
        {{ post.data.excerpt | truncate(200) }}
    </p>

    {% include "partials/tags.njk" %}
</article>
