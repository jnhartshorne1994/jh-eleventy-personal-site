{% set navPages = collections.all | eleventyNavigation %}

<header class="pt-6 border-t-4 border-pink border-solid md:pt-12">
  <div class="container | text-right">
    <nav class="inline-flex font-avenir-roman">
    {%- for entry in navPages %}
      <a class="mr-6 md:mr-10 duration-200 {% if entry.url == page.url %} | c-underline c-underline--primary {% endif %}" href="{{ entry.url | url }}">
        {{ entry.title }}
      </a>
    {% endfor %}
    </nav>
  </div>
</header>
