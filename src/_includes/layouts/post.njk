---
layout: layouts/base.njk
---
<section class="py-24">
  <div class="container | max-w-2xl lg:max-w-3xl 2xl:max-w-4xl mx-auto">
    <time class="relative inline-block mb-2 md:mb-4">
      {{ page.date.toDateString() }}
      <span class="c-underline c-underline--primary"></span>
    </time>
    <h1 class="text-3xl leading-normal max-w-lg mb-4 md:text-4xl lg:max-w-2xl lg:text-6xl lg:leading-tight xl:max-w-3xl">
      {{ title -}}
      <span class="text-pink">.</span>
    </h1>

    <p class="mb-12 text-lg lg:text-xl xl:text-2xl md:mb-12">
      {{ excerpt }}
    </p>

    <div class="prose xl:prose-lg | mb-8">
      {{ content | safe }}
    </div>

    <div class="md:flex text-pink">
      <a href="https://twitter.com/intent/tweet?text={{ title | urlencode -}}&url={{ siteData.base_url | url}}{{ page.url | url }}" class="flex items-center mb-4 mr-12 md:mb-0 group">
        <svg aria-hidden="true" class="flex-shrink-0 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
        <span class="group-hover:underline">Share <span class="sr-only"> {{ title }} </span> on Twitter</span>
      </a>
      <a href="#top" class="group flex items-center mr-12" data-js-hook="back-to-top-button">
        <svg aria-hidden="true" class="flex-shrink-0 mr-2 h-4 w-4 group-hover:mb-2 duration-200" fill="currentColor" fill-rule="evenodd" viewBox="0 0 24 24" clip-rule="evenodd"><path d="M11 2.206l-6.235 7.528-.765-.645 7.521-9 7.479 9-.764.646-6.236-7.53v21.884h-1v-21.883z"/></svg>
        <span class="group-hover:underline">Back to top</span>
      </a>
    </div>
  </div>
</section>
