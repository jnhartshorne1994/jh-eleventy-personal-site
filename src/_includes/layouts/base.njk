<!doctype html>
<html lang="en" class="no-js">
<head>
  <link rel="preload" href="{{ '/fonts/DMSans-Regular.woff2' | url }}" as="font" crossorigin="anonymous">

  <style>
    @font-face {
      font-display: optional;
      font-family: 'DMSans';
      src: url('{{ '/fonts/DMSans-Regular.woff2' | url }}') format('woff2');
    }
  </style>

  <meta charset="utf-8">
  <script>
    document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/g, '') + 'has-js ';
  </script>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ renderData.description or description or metadata.description }}">
  <meta name="generator" content="Eleventy">

  <meta property="og:site_name" content="{{ renderData.title or title or metadata.title }}">
  <meta property="og:title" content="{{ renderData.title or title or metadata.title }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://jhartshorne.co.uk/">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:creator" content="@jnh1994">
  <meta name="description" content="A front-end developer with a passion for accessibility, usability and performance">
  <meta name="twitter:description" content="A front-end developer with a passion for accessibility, usability and performance">
  <meta property="og:description" content="A front-end developer with a passion for accessibility, usability and performance">
  <meta property="og:image" content="https://jhartshorne.co.uk/images/generic.png">
  <meta name="twitter:image" content="https://jhartshorne.co.uk/images/generic.png">
  <meta property="og:image:alt" content="Generic image for Joshua's site">
  <meta name="twitter:image:alt" content="Generic image for Joshua's site">

  <link rel="apple-touch-icon" sizes="180x180" href="{{ '/favicons/apple-touch-icon.png' | url }}">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ '/favicons/favicon-32x32.png' | url }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ '/favicons/favicon-16x16.png' | url }}">
  <meta name="theme-color" content="#E6155E">

  <title>{{ renderData.title or title or metadata.title }}</title>

  <link rel="stylesheet" href="{{ '/styles/index.css' | url }}">

  <!-- Panelbear Analytics - We respect your privacy -->
  <script async src="https://cdn.panelbear.com/analytics.js?site=JQAPRsiztOa"></script>
  <script>
      window.panelbear = window.panelbear || function() { (window.panelbear.q = window.panelbear.q || []).push(arguments); };
      panelbear('config', { site: 'JQAPRsiztOa' });
  </script>
</head>

<body class="bg-grey leading-normal font-base text-white" id="top" itemscope itemtype="http://schema.org/WebPage">
  {% include "partials/header.njk" %}

  <main>
    {{ content | safe }}
  </main>

  {% include "partials/footer.njk" %}

  <script src="{{ '/scripts/index.js' | url }}"></script>
</body>

</html>
